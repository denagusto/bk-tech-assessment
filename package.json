{
  "name": "flash-sale-frontend",
  "version": "1.0.0",
  "description": "Frontend for High-Throughput Flash Sale System",
  "private": true,
  "dependencies": {
    "axios": "^1.6.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^3.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "cypress": "^13.6.4",
    "start-server-and-test": "^2.0.3"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
